<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calculotprototype.g14.cmpt276.calculot_prototype.PolarActivity">
    <LinearLayout
        android:id="@+id/learnLayout"
        android:layout_width="390dp"
        android:layout_height="518dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/polarText"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Polar coordinates"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/polarView"
            android:layout_width="320dp"

            android:layout_height="wrap_content"
            android:layout_weight="0.71"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tV2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Player should work on device with youtube app, but does not work on emulator"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="315dp"
            android:layout_height="266dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" The polar coordinates r and θ are defined in terms" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qv21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" of Cartesian coordinates by x=" />

                    <EditText
                        android:id="@+id/inputP1"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.86"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/qv22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  and" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qv31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.04"
                        android:text=" y = " />

                    <EditText
                        android:id="@+id/inputP2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/qv41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:text=" r = " />

                    <EditText
                        android:id="@+id/inputP3"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.14"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="197dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:text=" tanθ = " />

                    <EditText
                        android:id="@+id/inputP4"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.31"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:text=" θ = " />

                    <EditText
                        android:id="@+id/inputP5"
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <Button
                    android:id="@+id/polarbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verify" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
