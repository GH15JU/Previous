<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_background"
    tools:context="calculotprototype.g14.cmpt276.calculot_prototype.VectorActivity">

    <TextView
        android:id="@+id/vectorText"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Vectors"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/vectorView"
        android:layout_width="0dp"

        android:layout_height="150dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.60"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vectorText" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vectorView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/ssa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vectors have a magnitude and"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV1"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.60"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/holo_red_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qv21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed is a scalar quantity, while"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV2"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.76"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/qv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="is vector"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qv31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:text="Vector between points (x1,y1)and(x2,y2)="
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/holo_red_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/qv41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"
                    android:text="v=(x1,y1) , u=(x2,y2), v+u= "
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV4"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/holo_red_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.17"
                    android:text="u = (a,b), 10*u = "
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV5"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.31"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/holo_red_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="u = (a,b), v = (c,d), u*v = "
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputV6"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <Button
                android:id="@+id/vectorbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verify" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
