<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/game_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calculotprototype.g14.cmpt276.calculot_prototype.calcGame.GameActivity">

    <LinearLayout
        android:id="@+id/vectorGameInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="210dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vectorGameTopInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/vectorGameBottomInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/crystalBallLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vectorGameInfoLayout"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vectorMultipleChoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_below="@+id/crystalBallLayout"
        android:layout_alignParentStart="true">

    </LinearLayout>
</RelativeLayout>
