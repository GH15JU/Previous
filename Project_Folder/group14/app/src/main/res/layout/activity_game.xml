<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/game_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calculotprototype.g14.cmpt276.calculot_prototype.calcGame.GameActivity">

    <RelativeLayout
        android:id="@+id/game_screen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/game_questionfield"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/game_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_cols"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/game_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="health:" />

        <TextView
            android:id="@+id/game_xpgained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="TextView"
            tools:text="xp gained" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/game_questionfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_information"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/game_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/game_cols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/game_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="25dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/game_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="25dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="25dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/game_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="25dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
